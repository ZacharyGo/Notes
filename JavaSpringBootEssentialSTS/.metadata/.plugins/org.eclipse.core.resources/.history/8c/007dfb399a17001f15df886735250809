package com.frankmoley.lil.sbet.landon.roomwebapp.controllers;

import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.frankmoley.lil.sbet.landon.roomwebapp.mdels.Room;
import com.frankmoley.lil.sbet.landon.roomwebapp.service.RoomService;

@RestController
@RequestMapping("/api/rooms")
public class StaffRestControllre {  //WebService
	private final RoomService staffService;

	public StaffRestControllre(RoomService roomService) {
		this.staffService = roomService;
	}
		
	@GetMapping
	public List<Room> getAllRooms(){
		return staffService.getAllRooms();
	}
	
}
