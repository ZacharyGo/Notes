package com.frankmoley.lil.sbet.landon.roomwebapp.controllers;

import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.frankmoley.lil.sbet.landon.roomwebapp.mdels.Room;
import com.frankmoley.lil.sbet.landon.roomwebapp.service.RoomService;

@RestController
@RequestMapping("/api/rooms")
public class RoomRestControllre {
	private final RoomService roomServce;

	public RoomRestControllre(RoomService roomServce) {
		this.roomServce = roomServce;
	}
		
	@GetMapping
	public List<Room> getAllRooms(){
		return roomService.getAllRooms();
	}
	
}
